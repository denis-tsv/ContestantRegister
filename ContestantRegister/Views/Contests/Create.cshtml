@model ContestantRegister.Models.Contest

@{
    ViewData["Title"] = "Создать контест";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создать</h2>

<h4>Контест</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationStart" class="control-label"></label>
                <input asp-for="RegistrationStart" class="form-control" type="datetime" />
                <span asp-validation-for="RegistrationStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationEnd" class="control-label"></label>
                <input asp-for="RegistrationEnd" class="form-control" type="datetime" />
                <span asp-validation-for="RegistrationEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticipantType" class="control-label"></label>
                <select asp-for="ParticipantType" asp-items="Html.GetEnumSelectList<ParticipantType>()" class="form-control"></select>
                <span asp-validation-for="ParticipantType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContestType" class="control-label"></label>
                <select asp-for="ContestType" asp-items="Html.GetEnumSelectList<ContestType>()" class="form-control"></select>
                <span asp-validation-for="ContestType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsArchive" /> @Html.DisplayNameFor(model => model.IsArchive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ContestStatus" class="control-label"></label>
                <select asp-for="ContestStatus" asp-items="Html.GetEnumSelectList<ContestStatus>()" class="form-control"></select>
                <span asp-validation-for="ContestStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsEnglishLanguage" /> @Html.DisplayNameFor(model => model.IsEnglishLanguage)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsProgrammingLanguageNeeded" /> @Html.DisplayNameFor(model => model.IsProgrammingLanguageNeeded)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="YaContestLink" class="control-label"></label>
                <input asp-for="YaContestLink" class="form-control" />
                <span asp-validation-for="YaContestLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SendRegistrationEmail" /> @Html.DisplayNameFor(model => model.SendRegistrationEmail)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ShowRegistrationInfo" /> @Html.DisplayNameFor(model => model.ShowRegistrationInfo)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="YaContestAccountsCSV" class="control-label"></label>
                <textarea asp-for="YaContestAccountsCSV" class="form-control" rows="10"></textarea>
                <span asp-validation-for="YaContestAccountsCSV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsedAccountsCount" class="control-label"></label>
                <input asp-for="UsedAccountsCount" class="form-control" />
                <span asp-validation-for="UsedAccountsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
