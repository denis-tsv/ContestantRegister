@model ContestantRegister.ViewModels.HomeViewModels.ImportContestParticipantsViewModel

@{
    ViewData["Title"] = "Импортировать участников";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FromContestId" class="control-label"></label>
                <select asp-for="FromContestId" asp-items="ViewBag.FromContestId" class="form-control"></select>
                <span asp-validation-for="FromContestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticipantYaContestLogins" class="control-label"></label>
                <textarea asp-for="ParticipantYaContestLogins" class="form-control" rows="10"></textarea>
                <span asp-validation-for="ParticipantYaContestLogins" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Импортировать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
